<h2>Completed chores for <%= user.name %></h2>

<% if user.completed_tasks.count > 0 %>
  <% user.completed_tasks.each do |task| %>
    <%= link_to task.chore.name, chore_path(task.chore) %> - Finished <%= format_date(task.completion_date) %> <br>
  <% end %>
<% else %>
  <p>No completed chores!</p>
<% end %>
